@model ResetPasswordViewModel;
@{
    ViewData["Title"] = "Reset Password";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<section class="bg-light">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-md-6">
                <h1 class="h2 mb-0">@Localizer["Reset Password"]</h1>
            </div>
            <div class="col-md-6 mt-3 mt-md-0">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb justify-content-md-end bg-transparent p-0 m-0">
                        <li class="breadcrumb-item">
                            <a class="text-dark" href="login.html#"><i class="las la-home mr-1"></i>@Localizer["Home"]</a>
                        </li>
                        <li class="breadcrumb-item">@Localizer["Pages"]</li>
                        <li class="breadcrumb-item active text-primary" aria-current="page">@Localizer["Reset Password"]</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
</section>
<div class="page-content">
    <section>
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-12 col-md-5">
                    <div class="shadow p-3">
                        <img class="img-fluid mb-5" src="~/assets/images/login.png" alt="Login...">
                        <h3 class="text-center mb-3 text-uppercase">@Localizer["New password"]</h3>
                        <form asp-action="ResetPassword" asp-controller="Account" method="post">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group">
                                <input asp-for="ResetPassword" placeholder="@Localizer["Password"]"  class="form-control InputStyle" />
                                <span asp-validation-for="ResetPassword" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <input asp-for="CompareResetPassword" placeholder="@Localizer["Compare password"]"  class="form-control InputStyle" />
                                <span asp-validation-for="CompareResetPassword" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <input asp-for="EmailID" value="@ViewBag.EmailId" type="hidden" class="form-control" />
                            </div>
                            <div class="form-group">
                                <input asp-for="Code" type="hidden" value="@ViewBag.Code" class="form-control" />
                            </div>
                            <div class="form-group">
                                <input type="submit" value="@Localizer["Reset"]" class="btn btn-primary" />
                            </div>
                        </form>
                        <div class="d-flex align-items-center text-center justify-content-center mt-4">
                            <span class="text-muted mr-1">@Localizer["Don't have an account?"]</span>
                            <a asp-action="SignUp" asp-controller="Account">@Localizer["Sign Up"]</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>
