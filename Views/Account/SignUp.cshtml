@using Microsoft.AspNetCore.Localization
@model RegistrationViewModel;
@{
    ViewData["Title"] = "SignUp";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="bg-light">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-md-6">
                <h1 class="h2 mb-0">@Localizer["Sign Up"]</h1>
            </div>
            <div class="col-md-6 mt-3 mt-md-0">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb justify-content-md-end bg-transparent p-0 m-0">
                        <li class="breadcrumb-item">
                            <a class="text-dark" href="signup.html#"><i class="las la-home mr-1"></i>@Localizer["Home"]</a>
                        </li>
                        <li class="breadcrumb-item">@Localizer["Pages"]</li>
                        <li class="breadcrumb-item active text-primary" aria-current="page">@Localizer["Sign Up"]</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
</section>
<div class="page-content">
    <section class="register">
        <div class="container">
            <div class="row justify-content-center text-center">
                <div class="col-lg-8 col-md-12">
                    <div class="mb-6">
                        <h6 class="text-primary mb-1">
                            — @Localizer["Sign Up"]
                        </h6>
                        <h2>@Localizer["Simple And Easy To Sign Up"]</h2>
                        <p class="lead">@Localizer["We use the latest technologies it voluptatem accusantium doloremque laudantium, totam rem aperiam."]</p>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-8 col-md-10 ml-auto mr-auto">
                    <div asp-validation-summary="ModelOnly" class="text-danger col-12"></div>
                    <div class="register-form text-center">
                        <form  method="post" asp-action="SignUp" asp-controller="Account">
                            <div class="messages"></div>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <input asp-for="FName" class="form-control" placeholder="@Localizer["FName"]">
                                        <span asp-validation-for="FName" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <input asp-for="LName" class="form-control" placeholder="@Localizer["LName"]">
                                        <span asp-validation-for="LName" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <input asp-for="Email" class="form-control" placeholder="@Localizer["Email"]">
                                        <span asp-validation-for="Email" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <input asp-for="Phone" class="form-control" placeholder="@Localizer["Phone"]">
                                        <span asp-validation-for="Phone" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <input asp-for="Password" class="form-control" placeholder="@Localizer["Password"]">
                                        <span asp-validation-for="Password" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <input asp-for="ComparePassword" class="form-control" placeholder="@Localizer["ComparePassword"]">
                                        <span asp-validation-for="ComparePassword" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <select asp-for="Gender" class="form-control">
                                            <option value="" selected>@Localizer["Gender"]</option>
                                            <option value="TRUE">@Localizer["Male"]</option>
                                            <option value="FALSE">@Localizer["Female"]</option>
                                        </select>
                                        <span asp-validation-for="Gender" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <select asp-for="Country" asp-items="@AlcantaraNew.Classes.CountriesList.Countries" class="form-control">
                                            <option selected="selected" disabled="disabled">@Localizer["Enter Country"]</option>
                                        </select>
                                        <span asp-validation-for="Country" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="row mt-5">
                                <div class="col-md-12">
                                    <div class="remember-checkbox clearfix mb-5">
                                        <div class="custom-control custom-checkbox">
                                            <input type="checkbox" class="custom-control-input" id="customCheck1" onclick="$('#regFormSubmitBtn').prop('disabled', !($('#regFormSubmitBtn').prop('disabled'))).toggleClass('btn-secondary  btn-primary')">
                                            <label class="custom-control-label" for="customCheck1">@Localizer["I agree to the term of use and privacy policy"]</label>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-12">
                                    <input id="regFormSubmitBtn" type="submit" class="btn btn-secondary" value="@Localizer["Create Account"]" disabled>
                                    <span class="mt-4 d-block">@Localizer["Have An Account?"] <a asp-action="Login" asp-controller="Account"><i>@Localizer["Sign In"]!</i></a></span>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>
