@model ForgotPasswordViewModel
@{
    ViewData["Title"] = "Forgot Password";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<section class="bg-light">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-md-6">
                <h1 class="h2 mb-0">@Localizer["Forgot Password"]</h1>
            </div>
            <div class="col-md-6 mt-3 mt-md-0">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb justify-content-md-end bg-transparent p-0 m-0">
                        <li class="breadcrumb-item">
                            <a class="text-dark" href="login.html#"><i class="las la-home mr-1"></i>@Localizer["Home"]</a>
                        </li>
                        <li class="breadcrumb-item">@Localizer["Pages"]</li>
                        <li class="breadcrumb-item active text-primary" aria-current="page">@Localizer["Forgot Password"]</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
</section>
<div class="page-content">
    <section>
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-12 col-md-5">
                    <div class="shadow p-3">
                        <img class="img-fluid mb-5" src="~/assets/images/login.png" alt="Login...">
                        <h3 class="text-center mb-3 text-uppercase">@Localizer["Forgot Password"]</h3>
                        <form asp-action="ForgotPassword" asp-controller="Account" method="post">
                            <div class="row justify-content-center">
                                <div asp-validation-summary="ModelOnly" class="col-12 col-md-8 text-danger text-center"></div>
                                <div class="col-12 text-danger text-center" id="fogotFormVal"></div>
                                <div class="form-group col-12 text-left">
                                    <input asp-for="ForgotPasswordEmail" placeholder="@Localizer["Email"]" class="form-control InputStyle" />
                                    <span asp-validation-for="ForgotPasswordEmail" class="text-danger"></span>
                                </div>
                                <div class="form-group col-12">
                                    <input type="submit" value="@Localizer["Reset Password"]" class="btn btn-primary float-left" />
                                    <div class="spinner-border d-none" role="status">
                                        <span class="sr-only">Loading...</span>
                                    </div>
                                    <a class="LinkStyle float-right pt-4" asp-action="Login" asp-controller="Account" >@Localizer["User Login"]</a>
                                </div>
                            </div>
                        </form>
                        <div class="d-flex align-items-center text-center justify-content-center mt-4">
                            <span class="text-muted mr-1">@Localizer["Don't have an account?"]</span>
                            <a asp-action="SignUp" asp-controller="Account">@Localizer["Sign Up"]</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>
