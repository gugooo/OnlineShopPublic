@model LoginViewModel;
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<section class="bg-light">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-md-6">
                <h1 class="h2 mb-0">@Localizer["Login"]</h1>
            </div>
            <div class="col-md-6 mt-3 mt-md-0">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb justify-content-md-end bg-transparent p-0 m-0">
                        <li class="breadcrumb-item">
                            <a class="text-dark" href="login.html#"><i class="las la-home mr-1"></i>@Localizer["Home"]</a>
                        </li>
                        <li class="breadcrumb-item">@Localizer["Pages"]</li>
                        <li class="breadcrumb-item active text-primary" aria-current="page">@Localizer["Login"]</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
</section>
<div class="page-content">
    <section>
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-12 col-md-5">
                    <div class="shadow p-3">
                        <img class="img-fluid mb-5" src="~/assets/images/login.png" alt="Login...">
                        <h3 class="text-center mb-3 text-uppercase">@Localizer["User Login"]</h3>
                        <form method="post" asp-antiforgery="true" asp-action="Login" asp-controller="Account">
                            <div class="text-center text-danger">
                                <ul class="list-unstyled">
                                    @foreach (var error in ViewData.ModelState.SelectMany(x => x.Value.Errors))
                                    {
                                        <li>@Html.Raw(error.ErrorMessage)</li>
                                    }
                                </ul>
                            </div>
                            <div class="form-group">
                                <input asp-for="LoginEmail" placeholder="@Localizer["Email"]" class="form-control">
                                <span asp-validation-for="LoginEmail"></span>
                            </div>
                            <div class="form-group">
                                <input asp-for="LoginPassword" placeholder="@Localizer["Password"]" class="form-control">
                                <span asp-validation-for="LoginPassword"></span>
                            </div>
                            <div class="form-group mt-4 mb-5">
                                <div class="remember-checkbox d-flex align-items-center justify-content-between">
                                    <div class="checkbox">
                                        <input asp-for="Remember">
                                        <label asp-for="Remember">@Localizer["Remember"]</label>
                                    </div>
                                    <a asp-action="ForgotPassword" asp-controller="Account">@Localizer["Forgot Password?"]</a>
                                </div>
                            </div> 
                            <input type="submit" class="btn btn-primary btn-block" value="@Localizer["Login Now"]">
                        </form>
                        <div class="d-flex align-items-center text-center justify-content-center mt-4">
                                <a href="javascript:void(0);" onclick="facebookLogin()" class="mr-2 d-inline-block ImgHover">
                                    <img src="~/Icons/FacebookLogo.png" height="30" />
                                </a>
                                <a href="javascript:void(0);" onclick="googleLogin()" class="ml-2 d-inline-block ImgHover">
                                    <img src="~/Icons/GmailLogo.png" width="34" />
                                </a>
                        </div>
                        <div class="d-flex align-items-center text-center justify-content-center mt-4">
                            <span class="text-muted mr-1">@Localizer["Don't have an account?"]</span>
                            <a asp-action="SignUp" asp-controller="Account">@Localizer["Sign Up"]</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>
