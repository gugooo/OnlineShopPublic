
@{
    ViewData["Title"] = Localizer["Contact Us"];
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!--hero section start-->

<section class="bg-light">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-md-6">
                <h1 class="h2 mb-0">@Localizer["Contact Us"]</h1>
            </div>
            <div class="col-md-6 mt-3 mt-md-0">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb justify-content-md-end bg-transparent p-0 m-0">
                        <li class="breadcrumb-item">
                            <a class="text-dark" asp-action="Index" asp-controller="Home"><i class="las la-home mr-1"></i>@Localizer["Home"]</a>
                        </li>
                        <li class="breadcrumb-item">@Localizer["Pages"]</li>
                        <li class="breadcrumb-item active text-primary" aria-current="page">@Localizer["Contact Us"]</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
</section>
<div class="page-content">

    <section>
        <div class="container">
            <div class="row mb-5">
                <div class="col-lg-8">
                    <div class="mb-5">
                        <h6 class="text-primary mb-5">— @Localizer["Contact Us"]</h6>
                        <h2 class="mb-0">@Localizer["We’d love to hear from you."]</h2>
                    </div>
                    <div class="row">
                            <div class="form-group col-md-6">
                                <input id="requestEmail" class="form-control" type="text" placeholder="@Localizer["Your Email"]" />
                            </div>
                            <div class="form-group col-md-6">
                                <input id="requestEmailTitle" class="form-control" type="text" placeholder="@Localizer["Subject"]" max="150" />
                            </div>
                            <div class="form-group col-md-12">
                                <textarea id="requestEmailMess" class="form-control" rows="8" placeholder="@Localizer["Message"]" maxlength="500"></textarea>
                            </div>
                            <div class="col-md-12 mt-4">
                                <input class="btn btn-primary btn-animated" id="requestEmailSubmit" type="button" value="@Localizer["Send Message"]" />
                            </div>
                    </div>

                    <form id="contact-form" class="row d-none" method="post" action="#">
                        <div class="messages"></div>
                        <div class="form-group col-md-6 d-none">
                            <label>First Name <span class="text-danger">*</span></label>
                            <input id="form_name" type="text" name="name" class="form-control" placeholder="First Name" required="required" data-error="Name is required.">
                            <div class="help-block with-errors"></div>
                        </div>
                        <div class="form-group col-md-6 d-none">
                            <label>Last Name <span class="text-danger">*</span></label>
                            <input id="form_name1" type="text" name="name" class="form-control" placeholder="Last Name" required="required" data-error="Name is required.">
                            <div class="help-block with-errors"></div>
                        </div>
                        <div class="form-group col-md-6">
                            <label>@Localizer["Email Address"]<span class="text-danger">*</span></label>
                            <input id="form_email" type="email" name="email" class="form-control" placeholder="Email" required="required" data-error="Valid email is required.">
                            <div class="help-block with-errors"></div>
                        </div>
                        <div class="form-group col-md-6">
                            <label>@Localizer["Phone Number"]<span class="text-danger">*</span></label>
                            <input id="form_phone" type="tel" name="phone" class="form-control" placeholder="Phone" required="required" data-error="Phone is required">
                            <div class="help-block with-errors"></div>
                        </div>
                        <div class="form-group col-md-12">
                            <label>@Localizer["Message"]<span class="text-danger">*</span></label>
                            <textarea id="form_message" name="message" class="form-control" placeholder="Message" rows="4" required="required" data-error="Please,leave us a message."></textarea>
                            <div class="help-block with-errors"></div>
                        </div>
                        <div class="col-md-12 mt-4">
                            <button class="btn btn-primary btn-animated">
                                <span>@Localizer["Send Message"]</span>
                            </button>
                        </div>
                    </form>
                </div>
                <div class="col-lg-4 mt-6 mt-lg-0">
                    <div class="shadow-sm rounded p-5">
                        <div class="mb-5">
                            <h6 class="text-primary mb-1">— @Localizer["Contact"]</h6>
                            <h4 class="mb-0">@Localizer["We Are here To help You"]</h4>
                        </div>
                        <div class="d-none mb-3">
                            <div class="mr-2">
                                <i class="las la-map ic-2x text-primary"></i>
                            </div>
                            <div>
                                <h6 class="mb-1 text-dark">@Localizer["Store address"]</h6>
                                <p class="mb-0 text-muted">423B, Road Wordwide Country, USA</p>
                            </div>
                        </div>
                        <div class="d-flex mb-3">
                            <div class="mr-2">
                                <i class="las la-envelope ic-2x text-primary"></i>
                            </div>
                            <div>
                                <h6 class="mb-1 text-dark">@Localizer["Email Us"]</h6>
                                <a class="text-muted" href="mailto:alcantara@alcantara.am"> alcantara@alcantara.am</a>
                            </div>
                        </div>
                        <div class="d-flex mb-3">
                            <div class="mr-2">
                                <i class="las la-mobile ic-2x text-primary"></i>
                            </div>
                            <div>
                                <h6 class="mb-1 text-dark">@Localizer["Phone Number"]</h6>
                                <a class="text-muted" href="tel:+37433710720">+374 33 710-720</a>
                            </div>
                        </div>
                        <div class="d-flex mb-5">
                            <div class="mr-2">
                                <i class="las la-clock ic-2x text-primary"></i>
                            </div>
                            <div>
                                <h6 class="mb-1 text-dark">@Localizer["Working Hours"]</h6>
                                <span class="text-muted">Mon - Fri: 10AM - 7PM</span>
                            </div>
                        </div>
                        <ul class="list-inline">
                            <li class="list-inline-item">
                                <a class="bg-white shadow-sm rounded p-2" href="contact-us.html#"><i class="la la-facebook"></i></a>
                            </li>
                            <li class="list-inline-item">
                                <a class="bg-white shadow-sm rounded p-2" href="contact-us.html#"><i class="la la-instagram"></i></a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>

        </div>
    </section>

    <section class="pt-0 d-none">
        <div class="container">
            <hr class="mt-0 mb-10">
            <div class="row justify-content-center text-center mb-5">
                <div class="col-lg-8">
                    <div>
                        <h6 class="text-primary mb-1">— @Localizer["Easy to Find"]</h6>
                        <h2 class="mb-0">@Localizer["Our Store Location"]</h2>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col">
                    <div class="map" style="height: 500px;">
                        <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3151.840108181602!2d144.95373631539215!3d-37.8172139797516!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x6ad65d4c2b349649%3A0xb6899234e561db11!2sEnvato!5e0!3m2!1sen!2sin!4v1497005461921" allowfullscreen="" class="w-100 h-100 border-0"></iframe>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <section class="p-0">
        <div class="container-fluid p-0">
            <div class="row no-gutters">
                <div class="col-sm-8 col-md-4 order-md-1 align-items-center d-flex justify-content-center bg-dark p-5">
                    <div class="d-flex align-items-center">
                        <img class="img-fluid" src="~/assets/images/insta/instagram-logo.png" alt="">
                        <div class="ml-3">
                            <h6 class="text-white mb-0">@Localizer["Follow Us on"]</h6>
                            <h3 class="text-white mb-0">@Localizer["Instagram"]</h3>
                        </div>
                    </div>
                </div>
                <div class="col-6 col-sm-4 col-md-2">
                    <a class="insta-item" href="contact-us.html#">
                        <img class="img-fluid h-100" src="~/assets/images/insta/01.jpg" alt="">
                        <div class="insta-icon"><i class="lab la-instagram"></i></div>
                    </a>
                </div>
                <div class="col-6 col-sm-4 col-md-2">
                    <a class="insta-item" href="contact-us.html#">
                        <img class="img-fluid h-100" src="~/assets/images/insta/02.jpg" alt="">
                        <div class="insta-icon"><i class="lab la-instagram"></i></div>
                    </a>
                </div>
                <div class="col-6 col-sm-4 col-md-2 order-md-1">
                    <a class="insta-item" href="contact-us.html#">
                        <img class="img-fluid h-100" src="~/assets/images/insta/03.jpg" alt="">
                        <div class="insta-icon"><i class="lab la-instagram"></i></div>
                    </a>
                </div>
                <div class="col-6 col-sm-4 col-md-2 order-md-1">
                    <a class="insta-item" href="contact-us.html#">
                        <img class="img-fluid h-100" src="~/assets/images/insta/04.jpg" alt="">
                        <div class="insta-icon"><i class="lab la-instagram"></i></div>
                    </a>
                </div>
            </div>
        </div>
    </section>

</div>

@section Scripts{
    <script>
    $(document).ready(function () {
        $('#requestEmailSubmit').click(function () {
            $.post("/Home/requestEmail", { email: $('#requestEmail').val(), title: $('#requestEmailTitle').val(), mess: $('#requestEmailMess').val() }, function (data) {
                if (data && data.res) {
                    $('#requestEmail').addClass("bg-success").removeClass("bg-danger");
                }
                else $('#requestEmail').removeClass("bg-success").addClass("bg-danger");
            });
        });

    });
    </script>

}