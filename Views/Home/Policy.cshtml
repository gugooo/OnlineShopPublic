
@{
    ViewData["Title"] = Localizer["Policy"];
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<section class="bg-light">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-md-6">
                <h1 class="h2 mb-0">@Localizer["Policy"]</h1>
            </div>
            <div class="col-md-6 mt-3 mt-md-0">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb justify-content-md-end bg-transparent p-0 m-0">
                        <li class="breadcrumb-item">
                            <a class="text-dark" href="privacy-policy.html#"><i class="las la-home mr-1"></i>@Localizer["Home"]</a>
                        </li>
                        <li class="breadcrumb-item">@Localizer["Pages"]</li>
                        <li class="breadcrumb-item active text-primary" aria-current="page">@Localizer["Policy"]</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
</section>
<div class="page-content">
    <section>
        <div class="container">
            <div class="row">
                <div class="col-lg-12 col-md-12">
                    @for (int i = 1; i < 20; i++)
                    {
                        <h4 class="mt-5 text-primary">@Localizer["h" + i]</h4>
                        <p class="mt-5">@Localizer["s" + i]</p>
                    }
                </div>
            </div>
        </div>
    </section>
</div>
